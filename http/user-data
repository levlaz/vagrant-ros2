#cloud-config
autoinstall:
  version: 1
  identity:
    hostname: ubuntu-server
    password: '$6$rounds=4096$salt$hash'
    username: vagrant
  ssh:
    install-server: true
    allow-pw: true
  packages:
    - curl
    - wget
    - git
    - vim
    - build-essential
    - software-properties-common
  user-data:
    disable_root: false
    users:
      - name: vagrant
        sudo: ALL=(ALL) NOPASSWD:ALL
        shell: /bin/bash
        lock_passwd: false
        passwd: $6$rounds=4096$salt$hash
  late-commands:
    - echo 'vagrant ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/vagrant
    - chmod 440 /target/etc/sudoers.d/vagrant
